@{
    ViewData["Title"] = "Customers";
    Layout = "_Layout";
}
  <!-- Navbar -->

  <!-- /.navbar -->

  <!-- Main Sidebar Container -->

  <!-- Main Sidebar Container -->


  <!-- Content Wrapper. Contains page content -->

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Customers</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
              <li class="breadcrumb-item active">Widgets</li>
            </ol>
          </div>
        </div>
      </div>  
    </section>

    <!-- Main content -->
<section class="content">

      <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Customers</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
            <thead>
                <tr>
                <th style="width: 1%">#</th>
                <th style="width: 30%">Customer Name</th>
                <th style="width: 30%">Company</th>
                <th>Assigned S.A</th>
                <th style="width: 8%" class="text-center">Status</th>
                <th style="width: 10%">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int index = 1;
                    foreach (dynamic cust in Model)
                    {
                        <tr data-item='@System.Text.Json.JsonSerializer.Serialize(cust)' data-id="@cust.AutoKey">
                            <td>@index</td>
                            <td>@cust.AccNo</td>
                            <td>@cust.CompanyName</td>
                            <td>@cust.SalesAgent</td>
                            <td class="project-state text-center">
                                @if (cust.IsActive == 'T')
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactive</span>
                                }
                            </td>
                            <td>
                            <a href="@Url.Action("ViewCustomer", new { CustomerId = cust.AutoKey })" 
                              class="btn btn-info btn-sm" target="_blank">
                              <i class="fas fa-eye-alt"></i> View
                            </a>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
            </table>
        </div>
    </div>
</section>
  
