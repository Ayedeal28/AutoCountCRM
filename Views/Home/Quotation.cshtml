@{
    ViewData["Title"] = "Quotation";
    Layout = "_Layout";
}
@model List<AutocountCRM_ProjectOne.Models.quotation_list>

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quotation</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Quotation</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Quotations</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects" id="quotation-table">
                <thead>
                    <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 20%">Quotation No.</th>
                        <th style="width: 25%">Client Name</th>
                        <th>Sales Agent</th>
                        <th style="width: 15%">Status</th>
                        <th style="width: 20%"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var q in Model)
                {
                    <tr>
                        <td>@q.QuotationID</td>
                        <td>@q.QuotationNo</td>
                        <td>@q.ClientName</td>
                        <td>@q.SalesAgent</td>
                        <td>
                            @if(q.Status == "Pending")
                            {
                                <span class="badge badge-warning">@q.Status</span>
                            }
                            else if(q.Status == "Completed")
                            {
                                <span class="badge badge-success">@q.Status</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">@q.Status</span>
                            }
                        </td>
                        <td class="project-actions text-right">
                            <button type="button" class="btn btn-info btn-sm btn-view"><i class="fas fa-eye"></i> View</button>
                            <a class="btn btn-danger btn-sm" href="#"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>

    <!-- Quotation Detail View -->
    <div id="quotation-view" style="display:none;">
        <div class="invoice p-3 mb-3">
            <div class="row">
                <div class="col-12">
                    <h4>
                        Quotation
                        <small class="float-right">Date: <span id="quotation-date"></span></small>
                    </h4>
                </div>
            </div>
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>Admin, Inc.</strong><br>
                        795 Folsom Ave, Suite 600<br>
                        San Francisco, CA 94107<br>
                        Phone: (804) 123-5432<br>
                        Email: info@almasaeedstudio.com
                    </address>
                </div>
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong id="customer-name"></strong><br>
                        <span id="customer-address"></span>
                    </address>
                </div>
                <div class="col-sm-4 invoice-col">
                    <b>Quotation #: <span id="quotation-no"></span></b><br>
                    <b>Credit Term:</b> <span id="credit-term"></span><br>
                    <b>Sales Agent:</b> <span id="sales-agent"></span><br>
                    <b>Location:</b> <span id="sales-location"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped" id="quotation-items">
                        <thead>
                            <tr>
                                <th>Qty</th>
                                <th>Product</th>
                                <th>UOM</th>
                                <th>Unit Price</th>
                                <th>Discount</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-6 ml-auto">
                    <p class="lead">Amount Due <span id="amount-date"></span></p>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr><th style="width:50%">Subtotal:</th><td id="subtotal"></td></tr>
                                <tr><th>Tax:</th><td id="tax"></td></tr>
                                <tr><th>Shipping:</th><td id="shipping"></td></tr>
                                <tr><th>Total:</th><td id="total"></td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row no-print">
                <div class="col-12">
                    <a href="#" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
                    <button type="button" class="btn btn-success float-right"><i class="far fa-credit-card"></i> Convert</button>
                    <button type="button" class="btn btn-primary float-right" style="margin-right:5px;"><i class="fas fa-download"></i> Generate PDF</button>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
<script>
    // View quotation details
    document.querySelectorAll('.btn-view').forEach(btn => {
        btn.addEventListener('click', function() {
            const row = this.closest('tr');
            const data = JSON.parse(row.dataset.quote);
            
            document.getElementById('customer-name').innerText = data.clientName;
            document.getElementById('customer-address').innerText = data.address;
            document.getElementById('quotation-no').innerText = data.quotationNo;
            document.getElementById('quotation-date').innerText = data["quotation-date"];
            document.getElementById('amount-date').innerText = data["amount-date"] || '';
            document.getElementById('credit-term').innerText = data.creditTerm;
            document.getElementById('sales-agent').innerText = data.salesAgent;
            document.getElementById('sales-location').innerText = data.salesLocation;
            
            const tbody = document.querySelector('#quotation-items tbody');
            tbody.innerHTML = '';
            data.items.forEach(item => {
                const tr = document.createElement('tr');
                tr.innerHTML = `<td>${item.qty}</td><td>${item.description}</td><td>${item.uom}</td><td>${item.unitPrice}</td><td>${item.discount}</td><td>${item.total}</td>`;
                tbody.appendChild(tr);
            });

            document.getElementById('subtotal').innerText = data.subtotal;
            document.getElementById('tax').innerText = data.tax || 0;
            document.getElementById('shipping').innerText = data.shipping || 0;
            document.getElementById('total').innerText = data.total || data.subtotal;

            document.getElementById('quotation-view').style.display = 'block';
        });
    });


</script>
}
