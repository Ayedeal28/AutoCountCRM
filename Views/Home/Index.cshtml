<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    const products = ['Product A', 'Product B', 'Product C', 'Product D', 'Product E'];
    const sales = products.map(() => Math.floor(Math.random() * 100) + 1);

    const totalSales = sales.reduce((a,b) => a+b, 0);

    const backgroundColors = sales.map(value => {
        if(value > 70) return 'rgba(60,141,188,0.9)';
        if(value > 40) return 'rgba(60,141,188,0.6)';
        return 'rgba(60,141,188,0.3)';
    });

    var ctx = document.getElementById('barChart').getContext('2d');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: products,
            datasets: [{
                label: 'Sales (Units)',
                data: sales,
                backgroundColor: backgroundColors,
                borderColor: 'rgba(60,141,188,1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            const units = context.raw;
                            const percent = ((units/totalSales)*100).toFixed(1);
                            return `${units} units (${percent}%)`;
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
});
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // get current page path (relative)
    const currentPath = window.location.pathname.split("/").pop();

    // select all sidebar links
    const sidebarLinks = document.querySelectorAll('.nav-sidebar a.nav-link');

    sidebarLinks.forEach(link => {
      // remove any existing active class
      link.classList.remove('active');

      // get href of link
      const linkPath = link.getAttribute('href').split("/").pop();

      // if href matches current page, add active
      if (linkPath === currentPath) {
        link.classList.add('active');

        // expand parent treeview if inside a submenu
        let parent = link.closest('.nav-treeview');
        while (parent) {
          const parentLink = parent.previousElementSibling;
          if (parentLink && parentLink.classList.contains('nav-link')) {
            parentLink.classList.add('active');
          }
          parent = parent.parentElement.closest('.nav-treeview');
        }
      }
    });
  });
</script>
