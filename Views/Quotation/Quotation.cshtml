@{
    ViewData["Title"] = "Quotation";
    Layout = "_Layout";
}
@model List<AutocountCRM_ProjectOne.Models.QT>

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quotation</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Quotation</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Quotations</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects" id="quotation-table">
                <thead>
                    <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 20%">Quotation No.</th>
                        <th style="width: 35%">Client Name</th>
                        <th>Sales Agent</th>
                        <th style="width: 15%">Total</th>
                        <th style="width: 10%">Action</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    int rowNum = 1;
                }
                @foreach(QT q in Model)
                {
                    <tr data-dockey="@q.DocKey">
                        <td>@rowNum</td>
                        <td>@q.DocNo</td>
                        <td>@q.DebtorName</td>
                        <td>@q.SalesAgent</td>
                        <td>RM : @q.FinalTotal</td>
                        <td>
                            <a href="@Url.Action("ViewQuotation", new { QuotationId = q.DocKey })" 
                                class="btn btn-info btn-sm" target="_blank">
                                <i class="fas fa-eye-alt"></i> View
                            </a>
                        </td>
                    </tr>
                    rowNum++;
                }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
<script>
</script>
}