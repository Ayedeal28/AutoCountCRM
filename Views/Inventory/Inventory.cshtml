@{
    ViewData["Title"] = "Inventory";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Inventory</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Quotation</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Inventory List</h3>
    </div>
@model IEnumerable<AutocountCRM_ProjectOne.Models.Inventory>

<div class="card-body p-0">
  <table class="table table-striped projects">
    <thead>
      <tr>
        <th style="width: 5%">#</th>
        <th style="width: 20%">Item Code</th>
        <th style="width: 35%">Description</th>
        <th style="width: 10%">Unit Measurement</th>
        <th style="width: 10%">Item Group</th>
        <th style="width: 10%" class="text-center">Item Type</th>
        <th style="width: 10%">Action</th>
      </tr>
    </thead>
    <tbody>
      @if (Model != null && Model.Any())
      {
        int counter = 1;
        foreach (var item in Model)
        {
          <tr data-item='@System.Text.Json.JsonSerializer.Serialize(item)'data-id="@item.AutoKey">
            <td>@counter</td>
            <td><a>@(item.ItemCode ?? "N/A")</a></td>
            <td>@(item.Description ?? "No description")</td>
            <td>@(item.BaseUOM ?? "N/A")</td>
            <td>@(item.ItemGroup ?? "N/A")</td>
            <td>@(item.ItemType ?? "N/A")</td>
            <td>
              <a href="@Url.Action("ViewInventory", new { InventoryId = item.AutoKey })" 
                class="btn btn-info btn-sm" target="_blank">
                <i class="fas fa-eye-alt"></i> View
              </a>
            </td>
          </tr>
          counter++;
        }
      }
      else
      {
        <tr>
          <td colspan="7" class="text-center">No inventory items found.</td>
        </tr>
      }
    </tbody>
  </table>
</div>

</div>
</section>
@section Scripts {
<script>
</script>
}
